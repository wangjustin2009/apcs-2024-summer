#include <iostream>
// 從鍵盤輸入10個整數，統計其中正數、負數和零的個數，並在螢幕上輸出

int main()
{
    int p,b,s,o;
    int a[10];
    for(int i=0;i<10;i++){
        printf("請輸入10個數字,第%d個:",i+1);
        scanf("%d", &a[i]);
    }
    
    for(int i=0;i<10;i++){
        printf(" %d",a[i]);
        if(a[i]>0){
            b+=1;//b=b+1
        }
        else if(a[i]==0){
        o+=1;
    }
    else{
        s+=1;
    }
    }
    printf("\n 正數:%d", b);
    printf("負數:%d", s);
    printf("零: %d", o);
    
    return 0;
}
